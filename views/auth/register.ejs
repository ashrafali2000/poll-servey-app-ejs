<%- include ('../partials/_header')  %> 
<div class="auth-container container z-depth-1" style="margin: 2em auto 1em auto; padding: 1em;">
    <form action="/auth/register" method="post">
        <h3 class="indigo-text lighten-1 center register-h3">Register Account</h3>
        <div class="row">
            <div class="col s12">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input required name="firstName" type="text" class="validate">
                    <label for="icon_prefix">First Name</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input required name="lastName" type="text" class="validate">
                    <label for="icon_prefix">Last Name</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input required name="email" type="email" class="validate">
                    <label for="icon_prefix">Email Address</label>
                </div>
            </div>
        </div>
        <div class="row">    
            <div class="col s12">
                <div class="input-field col s12">
                    <i class="material-icons prefix">security</i>
                    <input minlength="6" required name="password" type="password" class="validate">
                    <label for="icon_prefix">Password</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 center">
                <button class="btn waves-effect waves-light" type="submit">Register
                    <i class="material-icons right">person_add</i>
                </button>
            </div>
        </div>
    </form>
    <p class="grey-text center">OR</p>
    <div class="row">
        <div class="col s12 center">
            <a href="/auth/google" class="flex g-sign"><img src="/images/google.png" alt="" class="G-logo"><span>Sign in With Google</span> </a>
        </div>
    </div>
    <div class="row">
        <p class="grey-text col s12">Already have an Account ? <a href="/auth/login">Login Here</a></p>
    </div>
</div>
<%- include ('../partials/_script')  %> 
<%- include ('../partials/_footer')  %> 